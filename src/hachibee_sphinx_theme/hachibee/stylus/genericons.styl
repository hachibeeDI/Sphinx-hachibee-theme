@charset "utf-8"

@import "colors"

@font-face
  font-family: 'Genericons'
  src: url('./genericons-regular-webfont.eot')
  src: url('./genericons-regular-webfont.eot?#iefix') format('embedded-opentype'),
    url('./genericons-regular-webfont.woff') format('woff'),
    url('./genericons-regular-webfont.ttf') format('truetype'),
    url('./genericons-regular-webfont.svg#genericonsregular') format('svg')
  font-weight: normal
  font-style: normal

font-size-em(font_size)
  font-size: unit(font_size, 'em') !important
  font-size: unit(font_size, 'rem') !important


[class^="icon-"]:before, [class*=" icon-"]:before
  speak: none
  display: inline-block
  text-decoration: inherit
  width: 1em
  margin-right: .2em
  text-align: center
  /* opacity: .8 */

  /* For safety - reset parent styles, that can break glyph codes*/
  font-variant: normal
  text-transform: none

  /* fix buttons height, for twitter bootstrap */
  line-height: 1em

  /* Animation center compensation - margins should be symmetric */
  /* remove if not needed */
  margin-left: .2em
  -webkit-font-smoothing: antialiased


icon-default-style(font-name='Genericons', size=2.6)
  display: inline-block
  font-family: font-name;
  font-size-em size !important
  vertical-align: middle


.icon-twitter:before
  icon-default-style()
  content: '\f202'

.icon-facebook:before
  icon-default-style()
  content: '\f203'

.icon-github:before
  icon-default-style()
  content: '\f200'

.icon-blog:before
  icon-default-style()
  content: '\f471'

.icon-pen:before
  icon-default-style()
  content: '\f411'

.icon-checked:before
  icon-default-style()
  content: '\f418'

.icon-heart:before
  icon-default-style()
  content: '\f461'

.icon-totop:before
  icon-default-style()
  content: '\f432'



// raise to top button -----------
raise-topbutton-size()
  width: 80px
  height: 80px

#raise-top
  border-radius 60px
  background-color: cyan
  position: fixed
  right: 5%
  bottom: 80px
  cursor: pointer
  raise-topbutton-size()

  text-align: center
  line-height: 80px
  color: base-white
  letter-spacing: .05em
  &:before
    icon-default-style('Genericons', 4.2)
    content: '\f432'
