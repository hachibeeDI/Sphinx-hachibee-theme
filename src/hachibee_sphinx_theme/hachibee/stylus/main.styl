html, body
  overflow: visible
  font-family: "游ゴシック","YuGothic","Hiragino Kaku Gothic ProN","Hiragino Kaku Gothic Pro","ＭＳ ゴシック","Meiryo","メイリオ",sans-serif
  font-size: main-font-size
  color: black
  background-color: base-white
  font-weight: lighter
  height: 100%

div.content
  width: 100%
  height: auto
  min-height: 100%
  position: relative
  margin: 0 auto footer-height


h1, h2, h3, h4, h5
  font-weight: lighter

h1
  font-size: 36px

h1, h2
  margin: 25px auto 0 auto
  line-bottom()

h3, h4, h5
  margin: 15px auto 0 auto
  line-bottom(.1, .2)

ul
  padding: 0
  margin: 20px auto 0 15px

li ul
  margin: 5px auto 0 15px

li
  margin: 5px auto
  dl
    dt
      // リストのタイトル部分
    dd  // リストのぶら下がり部分
      margin: 0

a
  color: #009FC7
  &:hover
    color: #427daf
    text-decoration: none
  &:visited
    color: #BE4A94


input[type="text"]
  box-shadow(0.1px, 0.15px, 1px, .5px)
  border-style: none

input[type="submit"]
  border-radius(3)
  box-shadow(0.1px, 0.15px, 1px, .5px)

  display: inline-block
  color: base-white
  padding: 6px 10px 2px 10px
  background-color: #27B9D4
  font-weight: normal
  letter-spacing: 0.09em
  border-style: none
  text-shadow: 1px 1px 0px #6682CA


p.topless
  padding: 0 auto
  margin: 0 auto

header
  header-background()
  header-position()
  .relative
    padding-right: 50px
  ul
    padding: 0
    margin: 0
  li
    display: inline

.breadcrumb
  li
    display: inline-block
    list-style: none

.pre
  font-size: (main-font-size - 2px)
  background-color: light-yellow

.documentwrapper
  background-color: base-white
  width: full-width
  //width: 100%
  height: auto
  min-height: 100%
  margin: 0 auto


.document
  overflow: hidden
  background-color: base-white
  margin: 0 auto
  padding-top: 40px
  padding-bottom: 80px
  //width: (document-width)%
  width: full-width - sidebar-width


.sidebarwrapper
  overflow: scroll
  float: left
  //background-color: #F5F5F5
  margin: 0 auto
  padding-top: 50px
  width: sidebar-width
  min-width: sidebar-width
  height: 100%


.sidebar
  margin: 0 auto
  width: 90%
  font-size: 90%
  .relative
    margin: 60px auto

nav.localtoc
  ul
    margin-left: 0
  li
    padding-left: 0
    list-style: none
    ul
      margin-left: 15px
      li
        list-style: square

#searchbox
  margin: 50px auto


.body
  width: article-width
  margin: 0 auto

.headerlink
  text-decoration: none
  margin-left: 10px
  color: main-color


footer
  footer-background()
  footer-position()
  height: footer-height
  p
    display: inline-block
  li
    display: inline-block
    list-style: none

// TipとかNoteとかのベースになるやつ
.admonition
  margin: 20px auto
  padding-bottom: 5px
  box-shadow(0.1px, 0.15px, 1px, .5px)
  background-color: #F7F7F7
  p, ul
    padding-left: 20px

.admonition-title
  line-bottom()
  padding-left: 15px
  directive-font-style()
  background-color: light-blue  // default color

.attention
  .admonition-title
    background-color: orange

.caution
  .admonition-title
    background-color: violet

.danger
  .admonition-title
    background-color: red

.error
  .admonition-title
    background-color: red

.hint
  .admonition-title
    background-color: yellow

.important
  .admonition-title
    background-color: magenta

.note
  .admonition-title
    background-color: light-blue

.tip
  .admonition-title
    background-color: cyan

.warning
  .admonition-title
    background-color: red


.left
  float: left

.right
  float: right

.clearer
  clear: both
